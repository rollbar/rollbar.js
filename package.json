{
  "name": "rollbar",
  "version": "3.0.0-beta.3",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "http://github.com/rollbar/rollbar.js"
  },
  "description": "Effortlessly track and debug errors in your JavaScript applications with Rollbar. This package includes advanced error tracking features and an intuitive interface to help you identify and fix issues more quickly.",
  "keywords": [
    "error",
    "tracking",
    "logging",
    "debugging",
    "javascript"
  ],
  "license": "MIT",
  "main": "dist/rollbar.cjs",
  "browser": "dist/rollbar.umd.min.js",
  "module": "src/browser/rollbar.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "node": {
        "import": "./src/server/rollbar.js",
        "require": "./dist/rollbar.cjs"
      },
      "browser": {
        "import": "./src/browser/rollbar.js",
        "require": "./dist/rollbar.umd.min.js"
      },
      "default": "./dist/rollbar.umd.min.js"
    },
    "./src/browser/core": {
      "types": "./src/browser/core.d.ts",
      "require": "./src/browser/core.cjs",
      "default": "./src/browser/core.js"
    },
    "./src/telemetry": {
      "types": "./src/telemetry.d.ts",
      "require": "./src/telemetry.cjs",
      "default": "./src/telemetry.js"
    },
    "./src/browser/telemetry": {
      "types": "./src/browser/telemetry.d.ts",
      "require": "./src/browser/telemetry.cjs",
      "default": "./src/browser/telemetry.js"
    },
    "./src/browser/wrapGlobals": {
      "types": "./src/browser/wrapGlobals.d.ts",
      "require": "./src/browser/wrapGlobals.cjs",
      "default": "./src/browser/wrapGlobals.js"
    },
    "./src/scrub": {
      "types": "./src/scrub.d.ts",
      "require": "./src/scrub.cjs",
      "default": "./src/scrub.js"
    },
    "./src/truncation": {
      "types": "./src/truncation.d.ts",
      "require": "./src/truncation.cjs",
      "default": "./src/truncation.js"
    },
    "./src/tracing/tracing": {
      "types": "./src/tracing/tracing.d.ts",
      "require": "./src/tracing/tracing.cjs",
      "default": "./src/tracing/tracing.js"
    },
    "./src/browser/replay/recorder": {
      "types": "./src/browser/replay/recorder.d.ts",
      "require": "./src/browser/replay/recorder.cjs",
      "default": "./src/browser/replay/recorder.js"
    }
  },
  "dependencies": {
    "@rrweb/record": "^2.0.0-alpha.18",
    "async": "~3.2.3",
    "error-stack-parser-es": "^1.0.5",
    "json-stringify-safe": "~5.0.0",
    "lru-cache": "~2.2.1",
    "request-ip": "~3.3.0",
    "source-map": "^0.5.7"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "^7.27.0",
    "@babel/preset-env": "^7.26.9",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-mocha": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.1",
    "babel-loader": "^9.2.1",
    "chai": "^5.3.3",
    "es-check": "^9.1.4",
    "eslint": "^9.24.0",
    "express": "^4.21.2",
    "glob": "^5.0.14",
    "mocha": "^11.1.0",
    "nock": "^11.9.1",
    "node-libs-browser": "^0.5.2",
    "prettier": "^3.6.2",
    "sinon": "^8.1.1",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "scripts": {
    "build": "webpack --mode production",
    "postbuild": "npm run validate:es5 && npm run update:snippets:examples && npm run pack",
    "build:dev": "webpack --mode development",
    "postbuild:dev": "npm run postbuild",
    "test": "npm run test:wtr && npm run test:server",
    "test:server": "mocha 'test/server.*.test.js' --reporter spec",
    "test:wtr": "web-test-runner",
    "test:wtr:watch": "web-test-runner --watch",
    "lint": "./node_modules/.bin/eslint .",
    "pack": "node scripts/pack.js",
    "validate": "npm run validate:es5 && npm run validate:examples",
    "validate:es5": "es-check es5 './dist/**/*.js' --verbose",
    "validate:examples": "node scripts/validate-examples.js -p",
    "update:snippets:examples": "node scripts/update-snippets.js examples"
  }
}
